# CNS Report Generator 環境變數

# Redis 連接
REDIS_URL=redis://localhost:6379

# 共用密碼（簡單認證）
SHARED_PASSWORD=your_password_here

# S3/R2 Storage（可選，不設定則使用本地存儲）
S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET_NAME=cns-reports

# 本地存儲路徑（當 S3 未配置時使用）
LOCAL_STORAGE_PATH=/tmp/cns-storage

# CORS 設定
CORS_ORIGINS=*

# API 服務 Port
PORT=8000

# Azure OpenAI（LLM 翻譯功能，可選）
# 若未設定，系統將使用字典翻譯，未匹配的英文會保持原樣
AZURE_OPENAI_ENDPOINT=https://whaleforce-eastus2-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT=gpt-5.1
AZURE_OPENAI_API_VERSION=2024-12-01-preview
